
<%= render "pets/petslist" %>


<h1>Listing pets</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Creationdate</th>
    <th>Lostdate</th>
    <th>Founddate</th>
    <th>Adopteddate</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @pets.each do |pet| %>
  <tr>
    <td><%= pet.name %></td>
    <td><%= pet.creationDate %></td>
    <td><%= pet.lostDate %></td>
    <td><%= pet.foundDate %></td>
    <td><%= pet.adoptedDate %></td>
    <td><%= link_to 'Show', pet %></td>
    <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
    <td><%= link_to 'Destroy', pet, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Pet', new_pet_path %>
